---
title: contact
layout: "layouts/base.njk"
urlPath: /{{ title | slugify }}/
permalink: /{{ title | slugify }}/
eleventyNavigation:
    key: contact
    order: 1000
---

<div class="main-content">
    <div id="contact-form">
        <h2>
            Contáctanos
        </h2>
        <div id="form" class="form">
            <form id="message-form"
                name="contact" 
                class="needs-validation"
                novalidate
            >
                <label class="form-label" for="name">
                    Nombre:
                </label>
                <div class="input-group has-validation">
                    <input id="name"
                        class="form-field form-control"
                        name="name"
                        placeholder="Nombre"
                        type="text"
                        required
                    />
                    <div class="valid-feedback">
                        ¡Correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, introduce tu nombre.
                    </div>
                </div>
                <label class="form-label" for="email">
                    Email:
                </label>
                <div class="input-group has-validation">
                    <input id="email"
                        class="form-field form-control"
                        name="email"
                        placeholder="Correo Electronico"
                        type="email"
                        pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
                        required
                    >
                    <div class="valid-feedback">
                        ¡Correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, introduce un correo válido.
                    </div>
                </div>
                <label class="form-label" for="message">
                    Mensaje:
                </label>
                <div class="input-group has-validation">
                    <textarea
                        id="message"
                        class="form-field"
                        name="message"
                        placeholder="Mensaje"
                        wrap="hard"
                        required
                    ></textarea>
                    <div class="valid-feedback">
                        ¡Correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor, el mensaje debería tener contenido.
                    </div>
                </div>
                <button 
                    class="form-button" 
                    type="submit"
                    >
                    ¡Contáctanos!
                </button>
            </form>
        </div>
    </div>
    <!-- Modal Success -->
    <div class="modal fade" id="modal-success" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">¡Mensaje enviado!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Su mensaje se ha enviado con éxito.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Error -->
    <div class="modal fade" id="modal-error" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">¡Error!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Ha habido un error al enviar el mail.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>